@model LibraryApplication.Models.Book

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewBag.Title = "Books";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    h2 {
        color: #007bff;
        text-align: center;
    }

    .book-details {
        max-width: 600px;
        margin: 20px auto;
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    p {
        font-size: 1.1em;
        margin: 10px 0;
    }

    .anchor {
        display: inline-block;
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        text-align: center;
    }

    .anchor:hover {
        background-color: #0056b3;
    }
</style>




    <h1>Book Details</h1>
    <h2>@Model.Title</h2>
    <p>Author: @Model.Author</p>
    <p>ID: @Model.BookId</p>
    <a class="anchor" href="@Url.Action("Index", "Book")">Back to Book List</a>


