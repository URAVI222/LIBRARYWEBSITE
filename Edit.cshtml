@{
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

        input[type="text"]:focus,
        input[type="number"]:focus {
            border-color: #007bff;
            outline: none;
        }

    span {
        color: red;
        font-size: 0.9em;
    }
    .btns{
        display:flex;
    }
    button,.anchor {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-right:5px;
    }

        button:hover, .anchor:hover {
            background-color: #0056b3;
        }



       
</style>


<h1>Edit Book</h1>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="BookId" />

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Author"></label>
        <input asp-for="Author" />
        <span asp-validation-for="Author" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Genre"></label>
        <input asp-for="Genre" />
        <span asp-validation-for="Genre" style="color:red"></span>
    </div>

    <div>
        <label asp-for="PublicationYear"></label>
        <input asp-for="PublicationYear" type="number" min="1000" max="9999" />
        <span asp-validation-for="PublicationYear" style="color:red"></span>
    </div>
    <div class="btns">
    <button type="submit">Update Book</button>
    <a class="anchor" href="@Url.Action("Index", "Book")">Cancel</a>
    </div>
</form>