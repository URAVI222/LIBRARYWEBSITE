<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

    input[type="text"]:focus,
    input[type="number"]:focus {
        border-color: #007bff;
        outline: none;
    }

    input[type="submit"], .anchor{
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 50%;
        margin-right:5px
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }

    .btns{
        display:flex;
    }
</style>

<div>This is create page</div>

<form asp-action="SubmitBook" method="post">
    <label for="title">Book Title:</label><br>
    <input type="text" id="title" name="title" required><br><br>

    <label for="author">Author:</label><br>
    <input type="text" id="author" name="author" required><br><br>

    <label for="genre">Genre:</label><br>
    <input type="text" id="genre" name="genre"><br><br>

    <label for="year">Publication Year:</label><br>
    <input type="number" id="year" name="PublicationYear" min="1000" max="9999"><br><br>
    <div class="btns">
        <input type="submit" value="Create Book">
        <a class="anchor" href="@Url.Action("Index", "Book")">Cancel</a>
    </div>
    
</form>